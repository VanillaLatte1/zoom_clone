doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Koom
        link(rel='stylesheet', href='/public/css/home.css?ver=1')
        
    body
        header
            h1#head Koom
        main
            div#welcome
                form    
                    input(placeholder="room name", required, type="text")
                    button#Enter(type='image')
                        img(src='/public/image/엔터 (2).png')
            div#call
                h1#head2 Koom
                div#myStream
                    video#myFace(autoplay,playsinline, width="500", height="500")
                    video#peerFace(autoplay,playsinline, width="500", height="500")
                    div#button
                        img#mute(src='/public/image/mON.png')
                        img#camera(src='/public/image/CaON.png')
                        img#paint(src='/public/image/페인트.png')
                        select#cameras
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js")